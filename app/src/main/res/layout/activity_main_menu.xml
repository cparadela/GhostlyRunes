<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.GhostlyRunes.MainMenu"
    android:background="@drawable/smoke_misty2"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:clickable="false"
        android:animateLayoutChanges="false"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:showDividers="middle"

            android:gravity="center_horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.26" />

            <Button
                android:text="@string/start"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:id="@+id/start_gyro"
                android:background="@drawable/botonnaranja"
                android:layout_weight="0.10" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.21" />

            <Button
                android:text="@string/start2"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:id="@+id/start_compass"
                android:background="@drawable/botonnaranja"
                android:layout_weight="0.10" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.26" />

            <Button
                android:text="@string/instructions"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:id="@+id/instr_button"
                android:background="@drawable/botonazul"
                android:layout_weight="0.06" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <Button
                android:text="@string/credit"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:id="@+id/credit_button"
                android:layout_weight="0.06"
                android:background="@drawable/botonazul" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.26" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:weightSum="1">

            <Button
                android:layout_width="55dp"
                android:layout_height="57dp"
                android:id="@+id/spanish"
                android:background="@drawable/spain"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:id="@+id/english"
                android:background="@drawable/british" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/german"
                android:background="@drawable/germany"
                android:layout_weight="0.03" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
