<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_star_pattern"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.charlie.practicaandroid.StarPatternActivity"
    android:background="@drawable/blue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ghost_estrella"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/punto2"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:id="@+id/Point2"
        android:layout_alignTop="@+id/Point"
        android:layout_toRightOf="@+id/Point4"
        android:elevation="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/punto4"
        android:id="@+id/Point4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/punto5"
        android:id="@+id/Point5"
        android:adjustViewBounds="false"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/Point3"
        android:layout_toRightOf="@+id/Point3"
        android:layout_toEndOf="@+id/Point3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/punto3"
        android:id="@+id/Point3"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/Point"
        android:layout_toLeftOf="@+id/Point4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/punto1"
        android:layout_marginTop="40dp"
        android:id="@+id/Point"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/Point4"
        android:layout_toLeftOf="@+id/Point3"
        android:layout_toStartOf="@+id/Point3" />

</RelativeLayout>
